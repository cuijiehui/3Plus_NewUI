<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#f74245"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="25dip"
        android:visibility="gone">

        <TextView
            android:id="@+id/top_title_skin"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dip"
            android:gravity="left"
            android:text=""
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/top_title_time"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dip"
            android:gravity="center"
            android:text=""
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/top_title_battery"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dip"
            android:gravity="right"
            android:text=""
            android:textColor="#ffffff"
            android:textSize="18sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:text=""
        android:textColor="#ffffff"
        android:textSize="22sp"
        android:textStyle="bold" />
    <!-- android:background="@drawable/topbar_headlines" -->

    <LinearLayout
        android:id="@+id/layout_top_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginBottom="5dip"
        android:layout_marginTop="5dip"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/top_day_off"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/date_Day"
            android:textColor="#000"
            android:textSize="18dip" />

        <TextView
            android:id="@+id/tv_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dip"
            android:background="@drawable/top_week_off"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/week"
            android:textColor="#000"
            android:textSize="18dip" />

        <TextView
            android:id="@+id/tv_months"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dip"
            android:background="@drawable/top_months_off"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/months"
            android:textColor="#000"
            android:textSize="18dip" />
    </LinearLayout>
</LinearLayout>
