<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_work_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:id="@+id/iv_circle"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:background="@drawable/workouts_circle"/>
            <ImageView
                android:id="@+id/iv_line"
                android:layout_width="2dp"
                android:layout_height="69dp"
                android:layout_below="@+id/iv_circle"
                android:layout_marginLeft="10dp"
                android:background="@drawable/workouts_line"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_workouts_no_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No More Data"
            android:textColor="@color/white"
            android:visibility="gone"
            android:layout_marginLeft="20dp"/>
        <RelativeLayout
            android:id="@+id/rl_workouts_data"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@drawable/circle_rectangle_shape"
            android:visibility="visible"
            >
            <TextView
                android:id="@+id/tv_work_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01/13/2017 10:49PM"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_work_time"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_workouts_step"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="7000"
                    android:layout_marginLeft="10dp"
                    android:drawableTop="@drawable/workouts_step"
                    android:textColor="@color/white"/>
                <TextView
                    android:id="@+id/tv_workouts_cal"
                    android:gravity="center"
                    android:layout_weight="1"

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="380"
                    android:layout_marginLeft="5dp"

                    android:drawableTop="@drawable/workouts_cal"
                    android:textColor="@color/white"/>
                <TextView
                    android:id="@+id/tv_workouts_distance"
                    android:gravity="center"
                    android:layout_weight="1"

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="3.5"
                    android:layout_marginLeft="5dp"

                    android:drawableTop="@drawable/workouts_distance"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/tv_workouts_timer"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="6.2"
                    android:layout_weight="1"

                    android:drawableTop="@drawable/workouts_timer"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/white"/>
                <TextView
                    android:id="@+id/tv_workouts_heart"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="68avg"
                    android:gravity="center"
                    android:layout_weight="1"

                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:drawableTop="@drawable/workouts_heart"
                    android:textColor="@color/white"/>
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>