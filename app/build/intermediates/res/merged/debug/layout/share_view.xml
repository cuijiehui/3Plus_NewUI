<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_alignParentBottom="true"
    android:layout_height="230dp"
    android:orientation="vertical"
    android:background="@drawable/bg_main"
    android:baselineAligned="false">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"

        android:layout_marginTop="10dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:id="@+id/layout_share_msg">

            <ImageView
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:id="@+id/ivMsg"
                android:src="@drawable/share_msg" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/share_message"
                android:id="@+id/tvmsg"
                android:textColor="@color/text_color_black"
                android:gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:textSize="12sp" />

        </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:id="@+id/layout_share_email">

            <ImageView
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:id="@+id/imageView3"
                android:src="@drawable/share_mail" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/share_email"
                android:id="@+id/textView"
                android:textColor="@color/text_color_black"
                android:gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:textSize="12sp" />

        </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:id="@+id/layout_share_twitter">

            <ImageView
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:id="@+id/ivTwitter"
                android:src="@drawable/share_twitter" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/share_twitter"
                android:id="@+id/tvTwitter"
                android:textColor="@color/text_color_black"
                android:gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:textSize="12sp" />

        </LinearLayout>



        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:id="@+id/layout_share_fackbook">

            <ImageView
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:id="@+id/ivfackbook"
                android:src="@drawable/share_facebook" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/share_facebook"
                android:id="@+id/tvfackbook"
                android:textColor="@color/text_color_black"
                android:gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:textSize="12sp" />

        </LinearLayout>



    </LinearLayout>


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="#cccccc" />



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:id="@+id/layout_share_save">

            <ImageView
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:id="@+id/ivSave"
                android:src="@drawable/share_savepic" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/share_saveimage"
                android:id="@+id/tvsave"
                android:textColor="#81000000"
                android:gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:textSize="12sp" />

        </LinearLayout>









        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:id="@+id/layout_share_print">

            <ImageView
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:id="@+id/iv_print"
                android:src="@drawable/share_print" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/share_print"
                android:id="@+id/tv_print"
                android:gravity="center_horizontal"
                android:textColor="#81000000"
                android:layout_marginTop="5dp"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"

            android:id="@+id/layout_share_contact"
            android:visibility="invisible">

            <ImageView
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:id="@+id/iv_contact"
                android:src="@drawable/share_contact" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/share_contact"
                android:id="@+id/tv_contact"
                android:textColor="@color/text_color_black"
                android:gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:textSize="12sp" />

        </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:id="@+id/layout_share_copy"
            android:visibility="invisible">

            <ImageView
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:id="@+id/iv_copy"
                android:src="@drawable/share_copy" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/share_copy"
                android:id="@+id/tv_copy"
                android:gravity="center_horizontal"
                android:textColor="@color/text_color_black"
                android:layout_marginTop="5dp"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>






</LinearLayout>