<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearlayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fff"
    android:orientation="vertical" >

    
    <LinearLayout
		android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:id="@+id/linelayout_no_remind_notes"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dip"
            android:text="@string/lightuUp"
            android:textColor="#000"
            android:visibility="invisible" />
        
        <ProgressBar
            android:id="@+id/progress_horizontal"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="20dip"
            android:indeterminate="true"
           
             android:max="100"  
        	 android:progress="1"
             /> 
            <!--  android:progressDrawable="@drawable/probar_color" -->
             
            <!-- "@drawable/progressbar" -->
           <!--  android:progressDrawable="@color/header_bg_common" -->
            

        <TextView  
            android:id="@+id/tv_syndata"
	        android:layout_width="wrap_content"  
	        android:layout_height="wrap_content"  
	        android:text="@string/syndata"   
	        android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/tvStepIndex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tvToStep"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:visibility="invisible" />
  
        <LinearLayout 
            android:id="@+id/ll_battery"
       		android:layout_width="wrap_content"
       		android:layout_height="wrap_content"
       		android:gravity="center_vertical"
       		android:layout_marginTop="10dip"
        	android:layout_marginLeft="10dip"
       		android:orientation="horizontal" >
            <ImageView 
                android:id="@+id/iv_left_battery01"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginRight="10dip"
	            android:background="@drawable/battery"
	            android:visibility="gone" />
            <ImageView 
                android:id="@+id/iv_left_battery02"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginRight="10dip"
	            android:background="@drawable/battery_02"
	            android:visibility="gone" />
            <ImageView 
                android:id="@+id/iv_left_battery03"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginRight="10dip"
	            android:background="@drawable/battery_03"
	            android:visibility="gone" />
            <ImageView 
                android:id="@+id/iv_left_battery04"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginRight="10dip"
	            android:background="@drawable/battery_04"
	            android:visibility="gone" />
            
            
            <!-- android:drawableLeft="@drawable/battery" -->
	        <TextView 
	            android:layout_width="wrap_content"
	        	android:layout_height="wrap_content"
	        	android:layout_marginLeft="10dip"
	            android:text=""
	            android:textColor="#000"
	            android:textSize="16sp" 
	            android:id="@+id/textview_battery"
	            />
        </LinearLayout>
        
                
        <TextView 
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"        	
        	android:layout_marginTop="10dip"
        	android:layout_marginLeft="10dip"
        	android:drawablePadding="5dp"
        	android:gravity="center_vertical"
            android:text=""
            android:textColor="#000"
            android:textSize="16sp"
            android:id="@+id/textview_today_steps" 
            />        
        <TextView 
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"        	
        	android:layout_marginTop="10dip"
        	android:layout_marginLeft="10dip"
        	android:drawablePadding="5dp"
        	android:gravity="center_vertical"
            android:text="You have beaten 10% users of the world!"
            android:textColor="#000"
            android:textSize="16sp"
            android:id="@+id/textview_users"
            android:visibility="gone" 
            />        
               
        
              
    </LinearLayout>

</LinearLayout>