<?xml version="1.0" encoding="utf-8"?>
  <layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
        <item android:id="@android:id/background">
            <shape>
                <corners android:radius="0dip" />
                <gradient android:startColor="@color/darkGray" android:centerColor="@color/darkGray"  android:endColor="@color/darkGray"  android:angle="270.0" android:centerY="2.0"  />
            </shape>
        </item>
        <item android:id="@android:id/progress">
            <clip>
                <shape>
                    <corners android:radius="0dip" />
                    <gradient android:startColor="@color/bg_green_color" android:centerColor="@color/bg_green_color" android:endColor="@color/bg_green_color" android:angle="270.0" android:centerY="2.0"  />
                </shape>
            </clip>
        </item>
    </layer-list>

